!!!
%html
	%head
		%title DA Slideshows
		-# = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
		= stylesheet_link_tag "application", params[:controller], :media => "all"
		-# = javascript_include_tag "application", "data-turbolinks-track" => true
		= javascript_include_tag "application", params[:controller]
		= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto:700,400"
		= csrf_meta_tags

	%body
		- if current_page?(controller: 'slideshows', action: 'slideshow') || current_page?(controller: 'slideshows', action: 'channels')
			= yield
		- else
			.container
				= render 'layouts/header'
				.row
					-flash.each do |k, v|
						=content_tag(:div, v, class: "alert alert-#{k}")
				= yield
				.row
					= render 'layouts/footer'
				.row
					= debug(params) if Rails.env.development?
